<Window x:Class="excursion_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:excursion_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">

    <Viewbox Stretch="Uniform">
        <StackPanel Orientation="Vertical" Height="Auto" Width="Auto">

            <ListBox Height="283" x:Name="mainList" d:ItemsSource="{d:SampleData ItemCount=5}" KeyDown="mainList_KeyDown" SelectionChanged="mainList_SelectionChanged" Width="253">

            </ListBox>

            <Grid Height="55" VerticalAlignment="Bottom"  Grid.RowSpan="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button x:Name="addItem" Content="Добавить" Click="addItem_Click"    />
                <Button x:Name="remItem" Content="Удалить" Grid.Column="1" Click="remItem_Click" Foreground="Black" />
          </Grid>
         
          </StackPanel>    
    </Viewbox>
</Window>
